
@model MovieTime_Vol_2.Models.UserTable
@{
    ViewBag.Title = "Login";
    
}

    <div class="container" style="margin-top:10px;">
        <div>
            <h2>@ViewBag.Title</h2>
            <h4>@ViewBag.Message</h4>

        </div>
        <div class="justify-content-center">

            @using (Html.BeginForm("Login", "User", FormMethod.Post))
            {

                <form class="form-inline">

                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2">
                                @Html.LabelFor(model => model.UserID)

                            </div>
                            <div class="col-sm-5">
                                @Html.TextBoxFor(model => model.UserID, new { @class = "form-control", placeholder = "Username", required="required"  })
                                @Html.ValidationMessageFor(model => model.UserID)

                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2">
                                @Html.LabelFor(model => model.Password)

                            </div>
                            <div class="col-sm-5">
                                @Html.TextBoxFor(model => model.Password, new { @class = "form-control", placeholder = "Password", type = "password", required="required" })
                                @Html.ValidationMessageFor(model => model.Password)

                            </div>

                            <button type="submit" class="btn btn-primary btn-lg">Login</button>

                        </div>

                    </div>




                </form>
            }


        </div>
    </div>